<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/list_item_product_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow>

                <TextView
                    android:text="@string/lbl_list_item_product_code"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_item_product_id"
                    android:text="1" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/lbl_list_item_product_name"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_item_product_name"
                    android:text="Nome" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/lbl_list_item_product_description"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_item_product_description"
                    android:text="Descrição" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/lbl_list_item_product_stock"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_item_product_stock"
                    android:text="Quantidade" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/lbl_list_item_product_minStock"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_item_product_minStock"
                    android:text="Quantidade minima" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/lbl_list_item_product_unitPrice"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_item_product_unitPrice"
                    android:text="Valor Unitário" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

</LinearLayout>